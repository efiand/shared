{
	"name": "efiand-shared",
	"version": "0.1.4",
	"description": "A set of common modules (components, configurations, utilities) for any project.",
	"type": "module",
	"pre-commit": [
		"lint-format"
	],
	"browserslist": [
		"> 0.2%",
		"last 6 version"
	],
	"scripts": {
		"type-check": "vue-tsc --build --force",
		"dev": "vite",
		"lint-format": "npm run type-check && prettier --write . && eslint . --fix && stylelint **/*.{scss,vue} --fix",
		"lint": "npm run type-check && prettier --check . && eslint . && stylelint **/*.{scss,vue}"
	},
	"devDependencies": {
		"eslint": "9.12.0",
		"pre-commit": "1.2.2",
		"prettier": "3.3.3",
		"stylelint": "16.10.0",
		"vite": "5.4.10",
		"vue": "3.5.12"
	},
	"dependencies": {
		"@eslint/markdown": "6.2.1",
		"@tsconfig/node20": "20.1.4",
		"@types/node": "22.7.5",
		"@vue/eslint-config-typescript": "14.0.1",
		"@vue/tsconfig": "0.5.1",
		"@vueform/multiselect": "2.6.10",
		"autoprefixer": "10.4.20",
		"eslint-gitignore": "0.1.0",
		"eslint-plugin-perfectionist": "3.9.1",
		"eslint-plugin-vue": "9.29.0",
		"postcss-html": "1.7.0",
		"postcss-scss": "4.0.9",
		"postcss-sort-media-queries": "5.2.0",
		"postcss-url": "10.1.3",
		"sass": "1.80.3",
		"stylelint-config-standard": "36.0.1",
		"stylelint-order": "6.0.4",
		"typescript": "5.6.3",
		"vue-tsc": "2.1.6"
	}
}
